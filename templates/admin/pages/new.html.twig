{% extends 'admin/base.html.twig' %}

{% block title %}Add new flavor{% endblock %}

{% block body %}
    {% block header %}
        {% include "admin/partials/_header.html.twig" %}
    {% endblock %}
    <main>
        {% block aside %}
            {% include "admin/partials/_aside.html.twig" %}
        {% endblock %}
        <section class="section--dashboard">
            <h1>Insert flavors</h1>
            <div class="row-top">
                {{ form_start(form) }}
                    <div class="col-md-3">
                        {{ form_row(form.name) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </section>
    </main>
{% endblock %}