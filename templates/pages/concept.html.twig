                        <div class="swiper-slide">
                            <figure class="card-default">
                                <img src="{{ asset('/images/glace-caramel-334.jpg') }}" alt="Glace caramel">
                                <figcaption><p>Caramel</p></figcaption>
                            </figure>
                        </div>
                        <div class="swiper-slide">
                            <figure class="card-default">
                                <img src="{{ asset('/images/glace-chocolat-334.jpg') }}" alt="Glace chocolat">
                                <figcaption><p>Chocolat</p></figcaption>
                            </figure>
                        </div>
                        <div class="swiper-slide">
                            <figure class="card-default">
                                <img src="{{ asset('/images/glace-pistache-334.jpg') }}"
                                     alt="Glace pistache">
                                <figcaption><p>Pistache</p></figcaption>
