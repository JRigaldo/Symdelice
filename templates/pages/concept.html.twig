                                <figcaption><p>Mùre</p></figcaption>
                            </figure>
                        </div>
                        <div class="swiper-slide">
                            <figure class="card-default">
                                <img src="{{ asset('/images/glace-oreo-334.jpg') }}"
                                     alt="Géace oreo">
                                <figcaption><p>Oreo</p></figcaption>
                            </figure>
                        </div>
                        <div class="swiper-slide">
                            <figure class="card-button">
                                <a href="#">
                                    <img src="{{ asset('/images/glace-action-334.jpg') }}" alt="Glace action">
                                    <button>Voir plus</button>
                                    <figcaption><p>Voir</p></figcaption>
                                </a>
                            </figure>
                        </div>
                    </div>
                    <div class="swiper-button-next"></div>
                </div>
                <div class="shadow-overflow"></div>
            </div>
        </section>
    </main>
    {{ include("partials/_footer.html.twig") }}
{% endblock %}