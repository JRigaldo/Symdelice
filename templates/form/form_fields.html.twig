<!---------------------------------------------------- TEXT FIELD TYPE -->
{% block text_field_row %}
    {% apply spaceless %}
        <div class="field">
            {{ form_label(form) }}
            {{ form_widget(form) }}
            <span class="field-error">{{ form_errors(form) }}</span>
            <span class="field-helper">{{ form_help(form) }}</span>
        </div>
    {% endapply %}
{% endblock %}


{% block text_field_label %}
    {% apply spaceless %}
        <label for="{{ id }}" class="field-label">
            {{ label|raw }}
        </label>
    {% endapply %}
{% endblock %}

{% block text_field_widget %}
    {% apply spaceless %}
        <input class="field-input {{ form.vars.full_name }}" id="{{ id }}" name="{{ form.vars.full_name }}" type="text" value="{{ value }}" placeholder="" {% if required is defined and required == true %} required {% endif %} {% if attr['pattern'] is defined %}pattern="{{ attr['pattern'] }}"{% endif %} {% if attr['maxlength'] is defined %}maxlength="{{attr['maxlength']}}"{%endif%}/>
    {% endapply %}
{% endblock %}

